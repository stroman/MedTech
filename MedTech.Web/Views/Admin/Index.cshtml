@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scriptsInHead
{ 

    <script src="~/Scripts/App/Account/account-controller.js"></script>
    <script src="~/Scripts/App/Account/account-repository.js"></script>    
    
    <script src="~/Scripts/App/Admin/User/user-controller.js"></script>
    <script src="~/Scripts/App/Admin/User/user-repository.js"></script>

    <script src="~/Scripts/App/Admin/TextResource/textresource-controller.js"></script>
    <script src="~/Scripts/App/Admin/TextResource/textresource-repository.js"></script>    

    <script src="~/Scripts/App/Admin/AdminCompanyInfo/admin-companyinfo-ctrl.js"></script>
    <script src="~/Scripts/App/Admin/AdminCompanyInfo/admin-companyinfo-rep.js"></script>

    <script src="~/Scripts/App/Admin/admin-directive.js"></script>
}

<div class="navbar navbar-default navbar-fixed-top navbar-inverse">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("На главную", "Index", "Home", null, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @if(User.IsInRole("Admin")) 
                { 
                    <li class="dropdown">
                        <a href="javascript:void(0)" class="dropdown-toggle" data-toggle="dropdown">@T("Admin.Common.Settings")<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="#/Users">@T("Admin.Users.Title")</a></li>
                            <li><a href="#/TextResources">@T("Admin.TextResource.Title")</a></li>
                            <li><a href="#/EditCompanyInfo">Информация о компании</a></li>
                            <li class="divider"></li>
                            <li><a href="#">Separated link</a></li>
                        </ul>
                    </li>
                }
            </ul>
            @Html.Partial("_LogInOff")
        </div>
    </div>
</div>

<div class="container body-content">
    <div class="row">        
        <div class="col-md-12">
            <ng-view></ng-view>
        </div>
    </div>
    
    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - MedTech</p>
    </footer>
</div>

@section scripts{
    <script>
        
    </script>
}



