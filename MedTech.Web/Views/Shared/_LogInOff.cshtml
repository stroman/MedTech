<div ng-controller="AccountController"> 
    <div ng-if="accountInfo.isLogged">
        <form class="navbar-right" id="logoutForm">
            <ul class="nav navbar-nav navbar-right">                
                <li>
                    <a id="admin-panel-link" href="@Url.Action("Index","Admin")" class="text-center small">
                        <dl style="margin-bottom:0px">
                            <dd>@T("Admin.Common.Panel")</dd>
                            <dd>@User.Identity.Name</dd>
                        </dl>
                    </a>                    
                </li>
                <li><a href="javascript:void(0)" ng-click="logoutClick()">@T("Common.Logout")</a></li>
            </ul>
        </form>
    </div>
    <div ng-if="!accountInfo.isLogged">
        <ul class="nav navbar-nav navbar-right">
            <li><a href="#/Login">@T("Common.Login")</a></li>
        </ul>
    </div>
</div>

