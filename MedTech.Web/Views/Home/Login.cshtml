
<h2>Вход</h2>
<div class="row">
    <div class="col-md-14">        
            <form class="form-horizontal" name="loginForm">
                <hr />
                <p class="message bg-danger">{{message}}</p>                
                <div class="form-group">
                    <label class="col-md-2 control-label" for="Email">Email</label>                    
                    <div class="col-md-10">
                        <input id="Email" class="form-control" ng-model="login.email" type="email" required placeholder="Email" />  
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label" for="Password">Password</label>
                    <div class="col-md-10">
                        <input id="Password" class="form-control" ng-model="login.password" type="password" required placeholder="Password"/>
                    </div>
                </div>                
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            <label for="Remember">                                
                                <input id="Remember" type="checkbox" ng-model="login.remember" />
                                Запомнить
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Войти" ng-click="loginClick(login, loginForm)" class="btn btn-default" />
                    </div>
                </div>                
            </form>       
    </div>
</div>


